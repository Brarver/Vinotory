<div id="newClientInput" style="display:none;">
  Client Name:<br>
  <input type="text" id="clientName" value="">
  <br>
  Primary Contact:<br>
  <input type="text" id="primaryContact" value="">
  <br>
  Phone Number:<br>
  <input type="text" id="phoneNumber" value="">
  <br>
  E-mail Address:<br>
  <input type="text" id="emailAddress" value="">
  <br>
  Street:<br>
  <input type="text" id="street" value="">
  <br>
  City:<br>
  <input type="text" id="city" value="">
  <br>
