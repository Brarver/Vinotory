{{!----------------------------------- Modal for actual inventory changes ----------------------------}}

<div id="addValue-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Change Inventory Value</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Enter new inventory value.</p>
        <input type="text" class="newValue" value="">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" id="submit-inventory" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


